<h1>List of users</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Último login</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.full_name %></td>
      <td><%= user.email %></td>
      <td><%= user.last_sign_in_at %></td>
      <td><%= link_to "Visitar perfil", user_path(user), class:"btn btn-xs btn-success" %>
          <% if current_user == user %>
          <%= link_to  "Editar", edit_user_registration_path(user),
                                     class:"btn btn-xs btn-warning" %>
        </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="col-md-12">
  <%= form_for [@project, @bug, @comment],
      :html => {class: "form-horizontal", role: "form"} do |f| %>
  
    <div class='form-group'>
      <div class='control-label col-md-2'>
        <%= f.label :body, 'Novo comentário' %>
      </div>
      <div class='col-md-10'>
        <%= f.text_area :body, rows: 5, class: 'form-control', placeholder: 'Seu comentário' %>
      </div>
    </div>
    
    <div class='form-group'>
      <div class='col-md-offset-2 col-md-10'>
        <%= f.submit "Add Comment", class: "btn btn-primary btn-lg pull-right" %>
      </div>
    </div>
  <% end %>
</div>
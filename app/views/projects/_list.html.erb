<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Membros</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% obj.each do |project| %>
    <tr>
      <td><%= link_to project.name, project_path(project) %></td>
      <td><%= project.description %></td>
      <td><% project.users.each do |user| %>
            <%= user.full_name %>
          <% end %>
      </td>
      <% if current_user == project.leader %>
        <td>
          <%= link_to  "Editar", edit_project_path(project),
                                     class:"btn btn-xs btn-success" %>
          <%= link_to 'Apagar', project_path(project), 
                                :method => :delete, 
                                :data => { :confirm => "Tem certeza disso?" },
                                :class => "btn btn-xs btn-danger" %>
        </td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Descrição</th>
      <th>Membros</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% obj.each do |project| %>
    <tr>
      <td><%= project.name %></td>
      <td><%= project.description %></td>
      <td><% project.users.each do |user| %>
            <%= user.full_name %>
          <% end %>
      </td>
      <td>  
        <%= link_to "Visualizar projeto", project_path(project), class:"btn btn-xs btn-success" %>
        <% if current_user == project.leader %>
        
          <%= link_to  "Editar", edit_project_path(project),
                                     class:"btn btn-xs btn-warning" %>
          <%= link_to 'Apagar', project_path(project), 
                                :method => :delete, 
                                :data => { :confirm => "Tem certeza disso?" },
                                :class => "btn btn-xs btn-danger" %>
        <% end %>
      </td>
      
    </tr>
    <% end %>
  </tbody>
</table>